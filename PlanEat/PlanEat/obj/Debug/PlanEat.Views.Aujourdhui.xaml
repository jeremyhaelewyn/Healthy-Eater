		<StackLayout  Margin="10">
			<Label HorizontalTextAlignment="Center">Recapitulatif de la journée</Label>
			
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Slider Minimum="0" Maximum="100" Value="50" HorizontalOptions="FillAndExpand" />
				<Label>50%</Label>
			</StackLayout>

			<ListView Margin="50,10">

			</ListView>
			
			<Button HorizontalOptions="Center" HeightRequest="50" WidthRequest="150" BackgroundColor="#ADD8E6" Text="Démarrer"/>
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
